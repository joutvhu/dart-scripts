<idea-plugin>
    <id>com.joutvhu.jetbrains.dart-scripts</id>
    <name>Dart Scripts Runner</name>
    <vendor email="joutvhu@gmail.com" url="https://github.com/joutvhu">Giao Ho</vendor>

    <description>
        <![CDATA[
        ]]>
    </description>

    <change-notes/>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.terminal</depends>
    <depends>org.jetbrains.plugins.yaml</depends>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="com.joutvhu.jetbrains.dartscripts.run.DartScriptConfigurationType"/>
        <applicationService serviceInterface="com.joutvhu.jetbrains.dartscripts.run.DartScriptRunner"
                            serviceImplementation="com.joutvhu.jetbrains.dartscripts.run.DartScriptTerminalRunner"/>
        <runLineMarkerContributor language="yaml"
                implementationClass="com.joutvhu.jetbrains.dartscripts.PubspecLineMarkerProvider">
        </runLineMarkerContributor>
    </extensions>

    <actions/>
</idea-plugin>